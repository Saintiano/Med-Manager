<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                app:cardElevation="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/image_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:src="@drawable/avatar_guy"
                            android:id="@+id/set_doctor_profile_photo"
                            app:civ_border_color="@color/gray_light"
                            android:layout_marginTop="10dp"
                            app:civ_border_width="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/change_photo"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:text="Change Profile Photo"
                            android:layout_below="@id/profile_photo"
                            android:textSize="10sp"
                            android:textColor="@color/blue_primary"
                            android:background="@drawable/grey_border_bottom"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        //display Username
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"                            android:layout_marginTop="20dp"
                            android:background="@drawable/grey_border_bottom"
                            android:id="@+id/rellayout1"
                            >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/user_person"
                                android:layout_centerVertical="true"
                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:id="@+id/edit_doctor_username"
                                android:layout_marginStart="40dp"
                                android:background="@null"
                                android:textSize="15sp"
                                android:hint="Username"
                                android:inputType="textNoSuggestions"/>

                        </RelativeLayout>

                        //display display name
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"                            android:layout_below="@id/rellayout1"
                            android:background="@drawable/grey_border_bottom"
                            android:id="@+id/rellayout2"
                            >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_account_box_black_24dp"
                                android:layout_centerVertical="true"
                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:id="@+id/edit_doctor_full_name"
                                android:layout_marginStart="40dp"
                                android:background="@null"
                                android:textSize="15sp"
                                android:hint="Full Name"
                                android:inputType="textNoSuggestions"/>

                        </RelativeLayout>

                        //display Blood Group
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:layout_below="@id/rellayout2"
                            android:background="@drawable/grey_border_bottom"
                            android:id="@+id/rellayout3"
                            >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/doctor"
                                android:layout_centerVertical="true"
                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:id="@+id/edit_doctor_position_group"
                                android:layout_marginStart="40dp"
                                android:textSize="15sp"
                                android:background="@null"
                                android:hint="Doctorate position"
                                android:inputType="textNoSuggestions"/>

                        </RelativeLayout>

                        //display Genotype
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:layout_below="@id/image_card"
                            android:background="@drawable/grey_border_bottom"
                            android:id="@+id/rellayout4"
                            >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/doctor_treatment"
                                android:layout_centerVertical="true"
                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:id="@+id/edit_doctor_specialization"
                                android:layout_marginStart="40dp"
                                android:background="@null"
                                android:textSize="15sp"
                                android:hint="Specialization"
                                android:inputType="textNoSuggestions"/>

                        </RelativeLayout>

                    </LinearLayout>




                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/image_card"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                app:cardElevation="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/details_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_primary"
                        android:text="Hospital Medical Information"/>


                    //display Work
                    <RelativeLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/image_card"
                        android:background="@drawable/grey_border_bottom"
                        android:id="@+id/rellayout5"
                        >

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_group_work_black_24dp"
                            android:layout_centerVertical="true"
                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/edit_doctor_work_department"
                            android:layout_marginStart="40dp"
                            android:background="@null"
                            android:hint="Work Department"
                            android:inputType="textNoSuggestions"/>

                    </RelativeLayout>

                    //display Description
                    <RelativeLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/rellayout5"
                        android:background="@drawable/grey_border_bottom"
                        android:id="@+id/rellayout6"
                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="32dp"
                            android:src="@drawable/medicine_briefcase"
                            android:layout_centerVertical="true"
                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/edit_doctor_work_description"
                            android:layout_marginStart="40dp"
                            android:background="@null"
                            android:hint="Description"
                            android:inputType="textNoSuggestions"/>

                    </RelativeLayout>


                    //display Email
                    <RelativeLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/rellayout6"
                        android:background="@drawable/grey_border_bottom"
                        android:id="@+id/rellayout7"
                        >

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_email_black_24dp"
                            android:layout_centerVertical="true"
                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/edit_doctor_email"
                            android:layout_marginStart="40dp"
                            android:background="@null"
                            android:hint="Email"
                            android:inputType="textNoSuggestions"/>

                    </RelativeLayout>

                    //display Mobile Number
                    <RelativeLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/rellayout7"
                        android:background="@drawable/grey_border_bottom"
                        android:id="@+id/rellayout8"
                        >

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_contact_phone_black_24dp"
                            android:layout_centerVertical="true"
                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/edit_doctor_PhoneNumber"
                            android:layout_marginStart="40dp"
                            android:background="@null"
                            android:hint="Mobile Number"
                            android:inputType="textNoSuggestions"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/rellayout8">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/create_doctor_profile_button"
                            android:layout_centerHorizontal="true"
                            android:textColor="#f4f4f4"
                            android:textAllCaps="false"
                            android:padding="10dp"
                            android:clickable="true"
                            android:background="@drawable/save_profile_button"
                            android:text="Save"
                            style="@style/Base.TextAppearance.AppCompat.Body1"
                            android:layout_marginTop="16dp"
                            android:textSize="18sp"/>

                    </RelativeLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>










            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="300dp"
                android:orientation="horizontal">

                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="100dp"
                    android:id="@+id/progressBar_create_doctor_profile" />

                <TextView
                    android:id="@+id/please_wait_create_doctor_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Please Wait"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    />

            </LinearLayout>



        </RelativeLayout>


    </ScrollView>

</merge>