<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="#FF13A3FF"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/addmore_drugName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drug Name"
                android:textAllCaps="true"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage"
                android:ems="20"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:id="@+id/drug_duration"
                android:hint="Drug Duration"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:drawableLeft="@drawable/calendar_time"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage"
                android:ems="200"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="Drug Manufacturer"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:id="@+id/drug_manufacturer"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/manufacturer_truck"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage"
                android:ems="20"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:id="@+id/drug_sideEffects"
                android:hint="Side Effects"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:drawableLeft="@drawable/side_effect"
                android:layout_marginTop="0dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />









            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login"
                android:text="Update Details"
                android:textColor="#f16f7d"
                android:textAllCaps="false"
                android:layout_marginStart="95dp"
                android:padding="16dp"
                android:clickable="true"
                android:id="@+id/add_more"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="14dp"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="100dp"
                    android:id="@+id/progressBar_addmore" />

                <TextView
                    android:id="@+id/please_wait_addmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Please Wait"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    />


            </LinearLayout>




        </LinearLayout>






    </ScrollView>

    <ListView
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_medication_listView"/>

</RelativeLayout>