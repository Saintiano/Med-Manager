<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saint.medmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/med_logo_one"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/med_logo_one"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login_Activity" />
        <activity android:name=".Profile_Activity" />
        <activity android:name=".Edit_Profile_Activity" />
        <activity android:name=".Sign_Up_Activity" />
        <activity android:name=".Home_Activity" />
        <activity android:name=".PassWord_Recovery_Activity" />
        <activity android:name=".Report_Activity" />
        <activity android:name=".Medication_Activity" />
        <activity android:name=".Notification_Activity"></activity>
    </application>

</manifest>